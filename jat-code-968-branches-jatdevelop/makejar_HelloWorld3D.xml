
<project name="Ant-Test" default="main" basedir=".">
	<!-- Sets variables which can later be used. -->
	<!-- The value of a property is accessed via ${} -->
	<property name="src.dir" location="src" />
	<property name="build.dir" location="bin" />
	<property name="dist.dir" location="dist" />
	<property name="docs.dir" location="javadoc" />
	<property name="project-name" value="jat" />

	<!-- Deletes the existing build, docs and dist directory-->
	<target name="clean">
		<delete dir="${dist.dir}" />
	</target>

	<!-- Creates the  build, docs and dist directory-->
	<target name="makedir">
		<mkdir dir="${dist.dir}" />
	</target>

	<!--JAT Core Creates the deployable jar file  -->
	<target name="HelloWorld3D.jar" depends="clean,makedir">
		<jar destfile="${dist.dir}\HelloWorld3D.jar" basedir="${build.dir}" excludes="**/application/,**/core/,**/jat3D/,**/tests/,**/util/">
			<manifest>
				<attribute name="Main-Class" value="test.Main" />
			</manifest>
		</jar>
		<copy file="${dist.dir}\HelloWorld3D.jar" todir="deploy/Java3Dtest" />
	</target>


	<target name="main" depends="HelloWorld3D.jar">
		<description>Main target</description>
	</target>

</project>
